{
    "version": 2,
    "builds": [
    {
        "src": "frontend/package.json",
        "use": "@vercel/node",
        "config": {
        "includeFiles": ["frontend/**"]
        }
    },
    {
        "src": "frontend/public/**",
        "use": "@vercel/static"
    }
    ],
    "routes": [
    {
        "src": "/(.*)",
        "dest": "/frontend/$1"
    }
    ],
    "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
    ]
}
